{
  "name": "vite-element-plus-starter",
  "version": "0.0.1",
  "description": "A highly scalable vue boilerplate using vite + element plus",
  "main": "index.js",
  "keywords": [
    "vue",
    "typescript",
    "atomic-design",
    "ddd",
    "spa",
    "atomic-design-example",
    "ddd-example",
    "boilerplate",
    "vue-boilerplate",
    "vite",
    "element-plus"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/potoio/vite-element-plus-starter.git"
  },
  "bugs": "https://github.com/potoio/vite-element-plus-starter/issues",
  "author": "potoio",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "clean:dist": "rimraf dist",
    "clean:coverage": "rimraf coverage",
    "dev": "cp env/env.dev .env && vite --mode development --host",
    "build:dev": "pnpm clean:dist && cp env/env.dev .env && vite build --mode production",
    "build:prod": "pnpm clean:dist && cp env/env.prod .env && vite build --mode production",
    "build:report": "pnpm clean:dist && cp env/env.prod .env && vite build --mode report",
    "serve": "vite preview",
    "stylelint": "stylelint --config stylelint.config.js 'src/**/*.{vue,scss}'",
    "stylelint:fix": "stylelint --config stylelint.config.js --fix 'src/**/*.{vue,scss}'",
    "linter": "eslint -c .eslintrc.js --ext .js,.vue,.ts, src",
    "linter:fix": "eslint -c .eslintrc.js --fix --ext .js,.vue,.ts, src",
    "lint": "pnpm linter && pnpm stylelint",
    "lint:fix": "pnpm linter:fix && pnpm stylelint:fix",
    "test": "pnpm clean:coverage && jest",
    "test:watch": "pnpm clean:coverage && jest --watch"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "rollup": "^2.67.0",
    "@babel/core": "^7.0.0",
    "babel-jest": "^26.0.0",
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/vue": "^6.5.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "chalk": "^4.1.2",
    "commander": "^7.2.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-vue": "^7.20.0",
    "jest": "26.6.3",
    "jest-serializer-vue": "^2.0.2",
    "jest-transform-stub": "^2.0.0",
    "jest-watch-typeahead": "^0.6.5",
    "shelljs": "^0.8.5",
    "standard": "^16.0.4",
    "stylelint": "^13.13.1",
    "stylelint-config-recommended-scss": "^4.3.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-rscss": "^0.4.0",
    "stylelint-scss": "^3.21.0",
    "ts-jest": "26.5.6",
    "vue-jest": "^5.0.0-alpha.10"
  },
  "dependencies": {
    "@iconify/json": "^1.1.461",
    "@intlify/vite-plugin-vue-i18n": "^2.5.0",
    "@rollup/plugin-yaml": "^3.1.0",
    "@types/js-cookie": "^2.2.7",
    "@vitejs/plugin-legacy": "^1.6.4",
    "@vitejs/plugin-vue": "^2.1.0",
    "@vue/compiler-sfc": "^3.2.30",
    "@vuedx/typecheck": "^0.6.3",
    "@vuedx/typescript-plugin-vue": "^0.6.3",
    "@vuelidate/core": "^2.0.0-alpha.34",
    "@vuelidate/validators": "^2.0.0-alpha.26",
    "@vueuse/integrations": "^4.11.2",
    "autoprefixer": "^10.4.2",
    "axios": "^0.21.4",
    "camelcase": "^6.3.0",
    "dotenv-cli": "^4.1.1",
    "element-plus": "^2.0.0",
    "husky": "^7.0.4",
    "js-cookie": "^3.0.1",
    "postcss": "^8.4.6",
    "postcss-import": "^14.0.2",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.5.4",
    "sass": "^1.49.7",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.5.5",
    "unplugin-icons": "^0.12.23",
    "unplugin-vue-components": "^0.17.17",
    "vite": "^2.7.13",
    "vite-plugin-fonts": "^0.2.2",
    "vite-plugin-style-import": "^0.10.1",
    "vue": "^3.2.30",
    "vue-i18n": "^9.1.9",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "volta": {
    "node": "14.17.1"
  }
}
